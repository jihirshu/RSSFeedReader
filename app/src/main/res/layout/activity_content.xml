<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContentActivity">

    <TextView
        android:id="@+id/news_title"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Joker Breaks October Record with Big Box Office Haul"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="#000000"
        />

    <TextView
        android:id="@+id/news_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="30dp"
        android:text="2019-01-01"
        android:textSize="15dp"
        android:layout_below="@+id/news_title"/>

    <ImageView
        android:id="@+id/news_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/news_date"
        />
    <TextView
        android:id="@+id/news_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="Hello this is the content\n of this news"
        android:textSize="25dp"
        android:textColor="#000000"
        android:layout_below="@+id/news_image"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:layout_below="@+id/news_content">

        <Button
            android:id="@+id/btnLike"
            android:layout_width="119dp"
            android:layout_height="wrap_content"
            android:onClick="btnLikeOnClick"
            android:text="Favorite" />

        <Button
            android:id="@+id/btnShare"
            android:layout_width="117dp"
            android:layout_height="wrap_content"
            android:onClick="btnShareOnClick"
            android:text="Share" />

        <Button
            android:id="@+id/btnGoto"
            android:layout_width="142dp"
            android:layout_height="wrap_content"
            android:onClick="btnGotoOnClick"
            android:text="Visit website" />
    </LinearLayout>

</RelativeLayout>